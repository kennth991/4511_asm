<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ViewDevicesServlet</servlet-name>
        <servlet-class>ict.servlet.ViewDevicesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffViewDevicesServlet</servlet-name>
        <servlet-class>ict.servlet.StaffViewDevicesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewDevicesServlet</servlet-name>
        <url-pattern>/user/view_devices</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffViewDevicesServlet</servlet-name>
        <url-pattern>/staff/s_view_devices</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>ict.servlet.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/checkoutController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VenueServlet</servlet-name>
        <servlet-class>ict.servlet.VenueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VenueServlet</servlet-name>
        <url-pattern>/view_venue</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout> <!-- Session timeout in minutes -->
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>


</web-app>
